<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_title"
        android:layout_centerInParent="true"
        android:text="@string/second_title"
        android:textSize="@dimen/large_size"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image_icon"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/large_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/image_icon_left"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/image_icon"
        android:layout_marginRight="@dimen/middle_margin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/large_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image_icon_right"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_icon"
        android:layout_marginLeft="@dimen/middle_margin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/large_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>